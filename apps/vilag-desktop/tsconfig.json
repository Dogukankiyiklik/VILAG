{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "paths": {
            "@main/*": [
                "./src/main/*"
            ],
            "@renderer/*": [
                "./src/renderer/src/*"
            ],
            "@vilag/desktop-operator": [
                "../../packages/vilag-desktop-operator/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}